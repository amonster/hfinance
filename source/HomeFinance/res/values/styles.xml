<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="hint">
		<item name="android:layout_marginLeft">30dp</item>
		<item name="android:layout_marginRight">20dp</item>
		<item name="android:background">@drawable/coupon_box</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:gravity">center</item>
		<item name="android:clickable">true</item>
		<item name="android:textSize">18sp</item>
		<item name="android:typeface">serif</item>
	</style>
	<style name="label">
		<item name="android:textColor">@color/black</item>
		<item name="android:gravity">right</item>
	</style>
	<style name="group">
		<item name="android:background">@drawable/group_box</item>
		<item name="android:layout_marginBottom">5dp</item>
	</style>
	<style name="title_logo">
		<item name="android:layout_centerVertical">true</item>
		<item name="android:src">@drawable/logo_title</item>
	</style>
	<style name="title_text">
		<item name="android:layout_height">28dp</item>
		<item name="android:layout_marginLeft">16dp</item>
		<item name="android:paddingLeft">20dp</item>
		<item name="android:background">#1b5705</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textColor">@color/white</item>
	</style>	
</resources>
